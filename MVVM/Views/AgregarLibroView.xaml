<Page x:Class="AppLibros.MVVM.Views.AgregarLibroView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppLibros.MVVM.Views"
      DataContext="{StaticResource LibrosViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AgregarLibroView">

    <Grid AllowDrop="True" Drop="Grid_Drop" Background="#F5F5F5">
        <!-- Centro el contenido -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Padding="30" Background="White" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel Width="350" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <!-- Botón de portada -->
                    <Button Content="Agregar Carátula"
                            FontSize="20"
                            Click="Button_Click"
                            Height="30" Width="300"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,10"/>

                    <!-- Imagen -->
                    <Image Source="{Binding NuevaRutaPortada}"
                           Width="150" Height="200"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                    <!-- Título -->
                    <TextBlock Text="Título del Libro:"
                               FontSize="14" FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NuevoTitulo, Mode=TwoWay}"
                             Height="25" Margin="0,0,0,10"/>

                    <!-- Autor -->
                    <TextBlock Text="Autor del Libro:"
                               FontSize="14" FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NuevoAutor, Mode=TwoWay}"
                             Height="25" Margin="0,0,0,10"/>

                    <!-- Género -->
                    <TextBlock Text="Género del Libro:"
                               FontSize="14" FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NuevoGenero, Mode=TwoWay}"
                             Height="25" Margin="0,0,0,10"/>

                    <!-- Año -->
                    <TextBlock Text="Año de Publicación:"
                               FontSize="14" FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NuevoAnioPublicacion, Mode=TwoWay}"
                             Height="25" Margin="0,0,0,20"/>

                    <!-- Botón de agregar -->
                    <Button Content="Agregar Libro"
                            Height="30" Width="300"
                            FontSize="20"
                            Background="DarkOrange"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            Command="{Binding AgregarLibroCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
