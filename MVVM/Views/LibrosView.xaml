<Page x:Class="AppLibros.MVVM.Views.LibrosView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppLibros.MVVM.Views"
      mc:Ignorable="d"
      DataContext="{StaticResource LibrosViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibrosView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <ListBox
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                x:Name="LibrosListBox"
                ItemsSource="{Binding Libros}"
                SelectedItem="{Binding LibroSeleccionado, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image 
                                Source="{Binding RutaPortada}" 
                                Width="100" 
                                Height="150" 
                                Margin="5"/>
                            <StackPanel Margin="5" Orientation="Vertical">
                                <TextBlock Text="{Binding Titulo}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding AnioPublicacion, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                                <TextBlock Text="{Binding Autor}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="5">
            <Image 
                Source="{Binding LibroSeleccionado.RutaPortada}" 
                Width="150" 
                Height="200" 
                Margin="5"/>
            <StackPanel Margin="5" Orientation="Vertical">
                <TextBlock Text="{Binding LibroSeleccionado.Titulo}" FontWeight="Bold" FontSize="16"/>
                <TextBlock Text="{Binding LibroSeleccionado.AnioPublicacion, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                <TextBlock Text="{Binding LibroSeleccionado.Autor}" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
